@import "normalize.styl"
@import "fonts.styl"

gris_oscuro = #333333
gris_claro = #818181
rojo = #BD255B
a
	text-decoration none

body
	font-family 'Varela Round', sans-serif
	font-size 16px

figure
	margin 0
img
	vertical-align top
//buttons
.button-menu
	color gris_oscuro
	left .5em
	margin-top -10px 
	position absolute
	top 50%

.container
	padding 1.4rem
	font-size 0
	text-align center
.action
	color white	
	margin-right 0.5rem
	font-size 1.2rem
	&.last-child
		margin-right 0
	&.gray
		color gris_claro
.actions
	position absolute
	bottom 0
	left 0
	right 0
	background rgba(black,.3)
.border-bottom
	border-bottom 1px solid
.name
	color gris_oscuro
.menu
	display none
.relative
	position relative
.padding
	padding 1rem
.padding-tb
	padding 1rem 0

.author
	color gris_claro
.center-block
	margin 0 auto
.center-text
	text-align center
.right-text
	text-align right

.relative
	position relative
.progress
	margin 1em 0
	position relative
	.min
		font-size .8rem
		position absolute
		left 0
		top -5px
	.max
		font-size .8rem
		position absolute
		right 0
		top -5px
	.total
		background gris_claro
		border-radius 5px
		height 5px
		width 75%
		margin 0 auto
	.state
		background rojo
		border-radius 5px
		height 5px
		width 30%
		position relative
	.circle
		background gris_oscuro
		border-radius 50%
		height 10px
		width 10px
		position absolute
		right 0
		top -2px

.header
	height 3.5rem
	//a
	//	display none
	.title
		font-size 1.1rem
		text-align center
		margin 0
		line-height 3.5rem
.song
	width 8rem
	display inline-block
	font-size 1rem
	margin-right 1rem
	margin-bottom 1rem
	text-align left
	&:nth-child(even)
		margin-right 0
	p
		margin .5rem 0

.playing
	&.small
		width 20rem
