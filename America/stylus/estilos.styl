@import "normalize.styl"
@import "fonts.styl"

gris_oscuro = #333333
gris_claro = #818181
rojo = #BD255B
gris_mas_claro = #F0F0F0
a
	text-decoration none

body
	font-family 'Varela Round', sans-serif
	font-size 16px

figure
	margin 0
img
	vertical-align top
ul
	margin 0
	padding 0
//buttons
.button-menu
	color gris_oscuro
	left .5em
	margin-top -10px 
	position absolute
	top 50%

.container
	padding 1.4rem
	font-size 0
	text-align center
.action
	color white	
	margin-right 0.5rem
	font-size 1.2rem
	&.last-child
		margin-right 0
	&.gray
		color gris_claro
.actions
	position absolute
	bottom 0
	left 0
	right 0
	background rgba(black,.3)
.border-bottom
	border-bottom 1px solid
.name
	color gris_oscuro
.menu
	display none
.relative
	position relative
.padding
	padding 1rem
.padding-tb
	padding 1rem 0
.left
	float left
.right
	float right
.author
	color gris_claro
.center-block
	margin 0 auto
.center-text
	text-align center
.right-text
	text-align right
.relative
	position relative
.wrap
	width 800px
.round
	border-radius 50%
	overflow hidden
.progress
	margin 1em 0
	position relative
	.min
		font-size .8rem
		position absolute
		left 0
		top -5px
	.max
		font-size .8rem
		position absolute
		right 0
		top -5px
	.total
		background gris_claro
		border-radius 5px
		height 5px
		width 75%
		margin 0 auto
	.state
		background rojo
		border-radius 5px
		height 5px
		width 30%
		position relative
	.circle
		background gris_oscuro
		border-radius 50%
		height 10px
		width 10px
		position absolute
		right 0
		top -2px

.header
	height 3.5rem
	//a
	//	display none
	.title
		font-size 1.1rem
		text-align center
		margin 0
		line-height 3.5rem
.song
	width 8rem
	display inline-block
	font-size 1rem
	margin-right 1rem
	margin-bottom 1rem
	text-align left
	&:nth-child(even)
		margin-right 0
	p
		margin .5rem 0

.playing
	&.small
		width 20rem
		margin 0 auto
.input
	border 1px solid gris_claro
	height 2.5rem
	border-radius 5px
	padding 0 1rem 0 2rem
.search-icon
	position absolute
	left .5rem
	top .8rem
	color gris_claro
.close-icon
	position absolute
	top .6rem
	color gris_claro
	right .5rem
	font-size 1.2rem
.logo
	display none
.playlist
	width 16rem
	padding 0 2rem
	border-left 1px solid gris_claro
	display none
	.list
		list-style none
	.item
		padding 1rem 0
	.action
		font-size 0.8rem
.logo
	padding 1.3rem 0
	overflow hidden	
	background white
	display none	
.isotipo
	width 122px
.avatar
	width 38px
	height 38px
.username
	color gris_claro
	position relative
	top 8px
	margin-left .5rem
	&:after
		content ""
		border-left 7px solid transparent
		border-top 7px solid gris_claro
		border-right 9px solid transparent			
		display inline-block
		margin-left .4rem
@media screen and (min-width:480px)
	.song
		&:nth-child(even) 
			margin-right 1rem
	.image
		img
			width 100%
			height auto
	.playing
		&.medium
			width auto

@media screen and (min-width:800px)
	body
		background gris_mas_claro
	.button-menu
		display none
	.playing
		padding-top 1.3rem
		&.large
			margin 0 auto
			width 50rem
			overflow hidden
	.menu
		display block
		background gris_mas_claro
		overflow hidden
		border-top 1px solid gris_oscuro
		.item
			float left
			list-style none			
			a
				color gris_oscuro
				text-transform uppercase
				cursor pointer
				padding 1rem
				display block
				border-top 5px solid transparent
				&:hover
					border-top 5px solid gris_claro
	.music
		width 28rem
		float left
		.description
			display none
	.playlist
		display block
	.header
		height auto
		border none
		.title
			display none
	.logo
		display block
	
